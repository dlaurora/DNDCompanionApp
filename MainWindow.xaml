<Window x:Class="DNDCompanionApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DND Companion App" Height="600" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <!-- Barra de Búsqueda -->
            <TextBox Name="SearchTextBox" Width="200" />
            <Button Content="Buscar" Click="SearchButton_Click" Width="100" />

            <!-- Lista de Personajes -->
            <ListBox Name="CharactersListBox" DisplayMemberPath="CharacterName" Height="300" />

            <!-- Botones -->
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Crear Personaje" Click="CreateCharacterButton_Click" Width="120" />
                <Button Content="Ver Detalles" Click="ViewDetailsButton_Click" Width="100" Margin="10,0,0,0" />
                <Button Content="Eliminar Personaje" Click="DeleteCharacterButton_Click" Width="120" Margin="10,0,0,0" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
